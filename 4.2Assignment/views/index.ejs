<!doctype html>
<html lang="en">

<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/3831a0347a.js" crossorigin="anonymous"></script>
    <%- include('partials/header.ejs') %>
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/nav.ejs') %>
        <br><br>
        <div class="container">
            <h1 class="text-center">All Courses Details</h1>
            <br>
            <table class="table table-bordered table-striped table-hover">
                <thead>
                    <tr>
                        <th>Course Name</th>
                        <th>Course Duration</th>
                        <th>Course Fee</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <!--  Course.forEach(function(Course){ %> -->
                    <% if(Course.length!=0){ Course.forEach(function(data){ %>
                        <tr>
                            <td>
                                <%= data.course_name %>
                            </td>
                            <td>
                                <%= data.course_duration %>
                            </td>
                            <td>
                                <%= data.course_fees %>
                            </td>
                            <td>
                                <a href="/updatecourse/<%= data.id %>" class="link-info"><i class="far fa-edit"></i></a>
                                <a href="/deletecourse/<%= data.id %>" class="link-danger" onclick="return confirm('Are you sure?')"><i class="fas fa-trash ps-4"></i></a>
                            </td>
                        </tr>

                        <% }) %>
                            <% } else{ %>
                                <tr>
                                    <td class="text-center text-danger" colspan="4">Oops... There is no data in database.<br />Please
                                        Add some data by clicking this button.<br /><br/>
                                        <button class="btn btn-outline-primary text-info" type="button" action="GET">
                                            <a href="/addcourse" style="color: black;">Add Course</a></button></td>
                                </tr>
                                <% } %>
                </tbody>
            </table>

        </div>
        <%- include('partials/footer.ejs') %>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
                crossorigin="anonymous"></script>

</body>

</html>