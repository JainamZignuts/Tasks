<!doctype html>
<html lang="en">

<head>
    
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <%- include('partials/header.ejs')  %>     
</head>

<body class="d-flex flex-column min-vh-100">
    <%- include('partials/nav.ejs')  %>  
    <br><br>
    <div class="container">
        <h1 class="text-center">Add New Course</h1>
        <br><br><br>
        <form action="/addcourse" method="POST">
        <div class="row g-3">
            <div class="col-sm-7">
                <label for="course_name">Course Name:</label>
              <input type="text" class="form-control" placeholder="Course Name" name="course_name" id="course_name" required>
            </div>
            <div class="col-sm">
                <label for="course_duration">Course Duration:</label>
              <input type="text"  class="form-control" placeholder="Course Duration" name="course_duration" id="course_duration" required>
            </div>
            <div class="col-sm">
                <label for="course_fees">Course fee:</label>
              <input type="text" class="form-control" placeholder="Course Fee" name="course_fees" id="course_fees" required>
            </div>
        </div><br><br>
        <div class="col text-center">
            <button type="submit" class="btn btn-primary" style="align-content: center;">Create Course</button>
          </div>
        
    </form>

    </div>
    <%- include('partials/footer.ejs')  %> 
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
   
</body>

</html>